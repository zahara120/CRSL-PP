<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Product</title>
</head>
<body>
    <%- include('navbar') %>
    <h1>List Product</h1>
    <table>
        <thead>
            <tr>
                <th>no</th>
                <th>id</th>
                <th>name</th>
                <th>description</th>
                <th>price</th>
                <th>stock</th>
                <th>category_id</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((el, index) => { %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><%= el.id %></td>
                    <td><%= el.name %></td>
                    <td><%= el.description %></td>
                    <td><%= formatCurrency(el.price) %></td>
                    <td><%= el.stock %></td>
                    <td><%= el.Category.name %></td>
                    <td>
                        <a href="/products/<%= el.id %>/detail">detail</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>